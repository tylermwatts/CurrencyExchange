@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Foreign Currency Converter</h1>
    <p>Enter the type of currency and amount you wish to convert.</p>
</div>
<div class="card">
    <div class="card-body">
        <form id="latest-data" method="post" class="text-center">
            <h2>Get the latest exchange rates</h2>
            <div class="form-group">
                <h5>Initial currency type:</h5>
                <select class="currency-one" required asp-for="IndexViewModel.InitialType">
                    <optgroup label="Initial Currency">
                        <option value="" disabled selected>Please select a currency</option>
                        <option class="currency" value="EUR">€ Euro</option>
                        <option class="currency" value="USD">$ U.S. Dollar</option>
                        <option class="currency" value="GBP">£ Pound Sterling</option>
                    </optgroup>
                </select>
            </div>
            <div class="form-group">
                <h5>Amount to convert:</h5>
                <input type="number" required asp-for="IndexViewModel.InitialAmount" min="0.01" step="0.01" />
            </div>
            <div class="form-group">
                <h5>Return currency type:</h5>
                <select class="currency-two" required asp-for="IndexViewModel.ReturnType">
                    <optgroup label="Return Currency">
                        <option value="" disabled selected>Please select a currency</option>
                        <option class="currency" value="EUR">€ Euro</option>
                        <option class="currency" value="USD">$ U.S. Dollar</option>
                        <option class="currency" value="GBP">£ Pound Sterling</option>
                    </optgroup>
                </select>
            </div>
            <input type="submit" asp-page-handler="Latest" value="Convert" />
        </form>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <form id="historical-data" method="post" class="text-center">
            <h2>Get historical exchange rates</h2>
            <div class="form-group">
                <h5>Select any date since 1999:</h5>
                <input type="date" required asp-for="IndexViewModel.Date" min="1999-01-01" />
            </div>
            <div class="form-group">
                <h5>Initial currency type:</h5>
                <select class="currency-one" required asp-for="IndexViewModel.InitialType">
                    <optgroup label="Initial Currency">
                        <option value="" disabled selected>Please select a currency</option>
                        <option class="currency" value="EUR">€ Euro</option>
                        <option class="currency" value="USD">$ U.S. Dollar</option>
                        <option class="currency" value="GBP">£ Pound Sterling</option>
                    </optgroup>
                </select>
            </div>
            <div class="form-group">
                <h5>Amount to convert:</h5>
                <input type="number" required asp-for="IndexViewModel.InitialAmount" min="0.01" step="0.01" />
            </div>
            <div class="form-group">
                <h5>Return currency type:</h5>
                <select class="currency-two" required asp-for="IndexViewModel.ReturnType">
                    <optgroup label="Return Currency">
                        <option value="" disabled selected>Please select a currency</option>
                        <option class="currency" value="EUR">€ Euro</option>
                        <option class="currency" value="USD">$ U.S. Dollar</option>
                        <option class="currency" value="GBP">£ Pound Sterling</option>
                    </optgroup>
                </select>
            </div>
            <input type="submit" asp-page-handler="Historical" value="Convert" />
        </form>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('.currency-one').change(function (e) {
            $('.currency-two').children('optgroup').children('.currency').prop('disabled', false);
            $('.currency-two option[value=' + $(this).val() + ']').prop('disabled', true);
        })
        $('.currency-two').change(function (e) {
            $('.currency-one').children('optgroup').children('currency').prop('disabled', false);
            $('.currency-one option[value=' + $(this).val() + ']').prop('disabled', true);
        })
    });
</script>